<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="API_testing.MainPage"
             Title="Near Earth Objects">

    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label Text="Near Earth Objects" 
                   FontSize="24"
                   HorizontalOptions="Center" />
            <Button Text="Refresh Data" 
                Clicked="OnRefreshButtonClicked" />

            <CollectionView ItemsSource="{Binding Asteroids}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="5" Margin="5" BackgroundColor="LightGray">
                            <Label Text="{Binding Name}" FontSize="18" FontAttributes="Bold" />
                            <Label Text="{Binding ApproachDate}" />
                            <Label Text="{Binding DistanceFromEarth, StringFormat='Distance: {0} km'}" />
                            <Label Text="{Binding RelativeVelocity, StringFormat='Velocity: {0} km/h'}" />
                            <Label Text="{Binding EstimatedDiameter, StringFormat='Diameter: {0} km'}" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
